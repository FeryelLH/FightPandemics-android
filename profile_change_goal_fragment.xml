<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/medical_help_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:lineSpacingExtra="5.6sp"
        android:text="@string/medical_help"
        android:textColor="@color/color_primary_text"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/here_to_request_test" />

    <TextView
        android:id="@+id/other_help_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="5.6sp"
        android:text="@string/other_help"
        android:textColor="@color/color_primary_text"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medical_help_details" />

    <View
        android:id="@+id/profile_location_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/profile_header_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/donation_title_text"
        style="@style/AndroidNativeH216Px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/i_am_here_to"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Here_to_offer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="37dp"
        android:lineSpacingExtra="-2sp"
        android:text="I am here to offer: "
        android:textColor="@color/color_primary_brand_color"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_location_header" />

    <TextView
        android:id="@+id/here_to_request_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="193dp"
        android:lineSpacingExtra="-2sp"
        android:text="I am here to request: "
        android:textColor="@color/color_primary_brand_color"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_location_header" />

    <Button
        android:id="@+id/donation_save_btn"
        style="@style/PrimaryButton"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="402dp"
        android:lineSpacingExtra="5.9sp"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_location_header" />

    <TextView
        android:id="@+id/information_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp"
        android:lineSpacingExtra="5.6sp"
        android:text="@string/information"
        android:textColor="@color/color_primary_text"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/volunteerHR_text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/donation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="16dp"
        android:lineSpacingExtra="5.6sp"
        android:textColor="@color/color_primary_text"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/information_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Here_to_offer_text"
        tools:text="Donations" />

    <TextView
        android:id="@+id/volunteerHR_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="34dp"
        android:lineSpacingExtra="5.6sp"
        android:text="@string/volunteer_hours"
        android:textColor="@color/color_primary_text"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/here_to_request_test"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/profile_donation_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_arrow" />

    <TextView
        android:id="@+id/other_details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/other_help_text"
        tools:text="I need assistance getting groceries, \n medicine, etc." />

    <TextView
        android:id="@+id/medical_help_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medical_help_text"
        tools:text="I have symptoms of COVID-19." />

    <ImageView
        android:id="@+id/img_donation_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_location_header"
        app:srcCompat="@drawable/ic_checked_box" />

    <ImageView
        android:id="@+id/img_voluteerHR_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_info_box"
        app:srcCompat="@drawable/ic_unchecked_box" />

    <ImageView
        android:id="@+id/img_medical_help_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/here_to_request_test"
        app:srcCompat="@drawable/ic_unchecked_box" />

    <ImageView
        android:id="@+id/img_otherHelp_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_medical_help_box"
        app:srcCompat="@drawable/ic_unchecked_box" />

    <ImageView
        android:id="@+id/img_info_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_donation_box"
        app:srcCompat="@drawable/ic_unchecked_box" />

</androidx.constraintlayout.widget.ConstraintLayout>