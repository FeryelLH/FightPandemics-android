<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_post_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarStyle"
    android:background="@color/colorWhite"
    android:clipChildren="false"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    app:contentInsetStartWithNavigation="0dp"
    app:layout_collapseMode="pin"
    app:navigationIcon="@drawable/ic_cancel">

    <TextView
        android:id="@+id/tv_create_post_title"
        style="@style/AndroidNativeH122Px"
        android:fontFamily="@font/poppins_bold"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:textColor="@color/textColorPrimary"
        android:gravity="center"
        android:text="@string/create_a_post" />

</com.google.android.material.appbar.MaterialToolbar>